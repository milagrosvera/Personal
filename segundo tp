#include <iostream>
#include <stdio.h>

using namespace std;

struct Datos{

    int ID;
    char Cliente[12];
    char Producto[10];
    float Valor;

};

void leerdatos(FILE*);
void mostrar(FILE*);

int main(){

    FILE*p = fopen("Datos.bin","r+b");
int operacion;

cout<<"Leer datos<1>"<<endl;
cout<<"Mostrar<2>"<<endl;
cout<<"Despachar<3>"<<endl;
cout<<"Salir<4>"<<endl;

cin>>operacion;

switch(operacion){

case 1:
    
    leerdatos(p);
    
    
    break;
case 2:

    

    break;
    
case 3:
    break;
    
case 4:
    break;

}

fclose(p);


return 0;

}

void leerdatos(FILE*p){

Datos aux;

fread(&aux,sizeof(Datos),1,p);

while(!feof(p)){
    cout<<aux.ID<<"  "<<aux.Cliente<<"  "<<aux.Producto<<"   "<<aux.Valor<<endl;
fread(&aux,sizeof(Datos),1,p);
    
}
}
